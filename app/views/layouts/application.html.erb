<!DOCTYPE html>
<html>
<head>
  <title>InacapWorkshop</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'shared/header' %>
  <div class='container'>
    <% flash.each do |key, msg| %>
      <%=  content_tag :div, msg, class: "alert alert-#{key.to_sym == :notice ? 'success' : 'danger'}" %>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>

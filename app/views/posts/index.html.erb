<h1>Listing Posts</h1>

<p>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
</p>

<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Words</th>
      <th>Paragraphs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.words %></td>
        <td><%= post.paragraphs %></td>
        <td>
          <a href="<%= post_path(post) %>">
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            Show
          </a>
        </td>
        <td>
          <a href="<%= edit_post_path(post) %>">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          </a>
        </td>
        <td>
          <a href="<%= post_path(post) %>" data-method='delete', data-confirm='Are you sure?'>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

